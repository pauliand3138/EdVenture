<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.adventure.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_game"
        android:name="com.example.adventure.ui.game.GameFragment"
        android:label="Game"
        tools:layout="@layout/fragment_game" />

    <fragment
        android:id="@+id/navigation_courses"
        android:name="com.example.adventure.ui.courses.CoursesFragment"
        android:label="Courses"
        tools:layout="@layout/fragment_courses" />

    <fragment
        android:id="@+id/navigation_rewards"
        android:name="com.example.adventure.ui.reward.RewardFragment"
        android:label="Reward"
        tools:layout="@layout/fragment_reward" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.adventure.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
</navigation>